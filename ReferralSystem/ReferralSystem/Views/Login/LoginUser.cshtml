            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>




    <script>
            $(document).ready(function () {
                if (@ViewBag.Message == 1) {

            toastr.error("Please check the username and password.");

    }
            });
        $("#login-button").click(function (event) {
            event.preventDefault();

           
            $('form').fadeOut(500);
            $('.wrapper').addClass('form-success');
        });

    </script>

</body>




