@{
    if (ViewBag.MailSent == 1)   //Alert that password reset mail has been sent
    {
        <script>
            alert("Password Reset instructions have been sent to your registered email-id");
        </script>
    }
    
}
<body>
    <div class="wrapper">
        <div class="container">
            <h1><strong> PURPLE SQUIRREL</strong></h1>

            <form class="form" action="/Login/Redirect" method="post">
                <input class="input" style="color:black;" type="text" placeholder="Username" name="username" id="username" required>
                <input class="input" style="color:black;" type="password" placeholder="Password" name="password" id="password" required>
                <button type="submit" id="Login-button">Login</button><br /><br />
                @Html.ActionLink("Forgot Password?", "ForgotPassword", "Login", new { @style="text-decoration:none; "})
            </form>
        </div>

